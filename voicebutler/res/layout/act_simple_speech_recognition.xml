    <Button
        android:id="@+id/actSimpleSpeechRecognition_btnWordsRecognitionEn"
        style="@style/common_basicButton"
        android:text="@string/actSimpleRecognition_btnWordsRecognitionEn"
    />
    
    <ListView
        android:id="@+id/actSimpleSpeechRecognition_lstWords"
        style="@style/common_basicListView"
        android:layout_marginTop="@dimen/common_normalSeparator"
    />


