>

    <Button
        android:id="@+id/actSimpleSpeechRecognition_btnWebSearch"
        style="@style/common_basicButton"
        android:layout_marginTop="@dimen/common_normalSeparator"
        android:text="@string/actSimpleRecognition_btnWebSearch"
    />
    
    <Button
        android:id="@+id/actSimpleSpeechRecognition_btnWordsRecognition"
        style="@style/common_basicButton"
        android:text="@string/actSimpleRecognition_btnWordsRecognition"
