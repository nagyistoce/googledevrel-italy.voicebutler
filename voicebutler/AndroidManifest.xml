<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.rainbowbreeze.voicebutler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15"
    />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".ui.MainMenuActivity"
            android:label="@string/actMainMenu_title"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.TTSResourcesActivity"
            android:label="@string/actTTSResources_title"
        />
        
        <activity
            android:name=".ui.ReadTextActivity"
            android:label="@string/actReadText_title"
        />
        
        <activity
            android:name=".ui.SimpleSpeechRecognitionActivity"
            android:label="@string/actSimpleRecognition_title"
        />
        
        <activity
            android:name=".ui.VoiceCommandsActivity"
            android:label="@string/actVoiceCommands_title"
        />
        
        </application>

</manifest>